<h1>New Blogger</h1>

<% if @blogger.errors.any? %>
    <ul>
    <% @blogger.errors.full_messages.each do |e| %>
    <li class = "error_message"> <%= e %> </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :bio %>
<%= f.text_area :bio %>

<%= f.label :age %>
<%= f.number_field :age %>
<%= f.submit %>
<% end %>